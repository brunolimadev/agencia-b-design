<%- include('./partials/header')%>

<main class="container">
  <h2>Ol√° <%= user.name %></h2>
  <em>Seja bem vindo ao portal B-DESIGN</em>
  <hr>


  <ul class="nav nav-tabs mt-5" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="tab-contacts" data-toggle="tab" href="#contacts" role="tab"
        aria-controls="contacts" aria-selected="true">Contatos</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#newsletters" role="tab" aria-controls="newsletters"
        aria-selected="false">Newsletters</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="contacts" role="tabpanel" aria-labelledby="tab-contacts">
      <table class="table">
        <thead class="purple text-white">
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
            <th scope="col">Mensagem</th>
          </tr>
        </thead>
        <tbody>
          <% contacts.forEach(contact => {%>
          <tr>
            <td><%= contact.NOME%></td>
            <td><%= contact.EMAIL%></td>
            <td><%= contact.MENSAGEM%></td>
          </tr>
          <%})%>
        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="newsletters" role="tabpanel" aria-labelledby="profile-tab">
      <table class="table">
        <thead class="purple text-white">
          <tr>
            <th scope="col">Email</th>
            <th scope="col">Data</th>
          </tr>
        </thead>
        <tbody>
          <% newsletters.forEach(news => {%>
            <tr>
            <td><%= news.EMAIL%></td>
            <td><%= news.DATA_SYS%></td>
          </tr>
            <%})%>
        </tbody>
      </table>
    </div>
  </div>
</main>

